<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.harvic.animation.MainActivity" >
    <TextView
            android:id="@+id/tv"
            android:layout_width="80dip"
            android:layout_height="150dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="40dip"
            android:background="#ff00ff"
            android:text="@string/hello_world" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:shrinkColumns="0,1"
            android:stretchColumns="0,1" >

            <TableRow>

                <Button
                    android:id="@+id/btn_alpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aplha anim" />

                <Button
                    android:id="@+id/btn_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scale anim" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn_translate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="translate anim" />

                <Button
                    android:id="@+id/btn_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rotate anim" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set anim" />

                <Button
                    android:id="@+id/btn_interpolator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="interpolater" />
            </TableRow>
        </TableLayout>

</RelativeLayout>
